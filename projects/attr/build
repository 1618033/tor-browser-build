#!/bin/bash
[% c("var/set_default_env") -%]

tar -xf [% project %]-[% c('version') %].tar.[% c('compress_tar') %]

mkdir -p /var/tmp/dist/[% project %]
cd /var/tmp/dist/

cp -a $rootdir/[% project %]*/src/[% project %]/*.py ./[% project %]

[% c('tar', {
        tar_src => '.',
        tar_args => '-czf ' _ dest_dir _ '/' _ c('filename'),
        }) %]
